<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:gravity="center_vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/item_essence_header_default" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自拍"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_attention_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="2.0万订阅量"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_attention"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:text="+ 订阅"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/essence_tab_text_color_press"
        android:background="@drawable/attention_list_normal"/>

</LinearLayout>